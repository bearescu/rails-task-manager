<h1> To-do List </h1>
<% @tasks.each do |task| %>
<ul>
<li><%= link_to task.title, display_task_path(task.id) %></li>
</ul>
<%= link_to 'Edit a task', edit_task_path(task.id)%>
<%= link_to "Delete", delete_task_path(task.id),
  method: :delete,
  data: { confirm: "Are you sure?" } %>
<% end %>
<%= link_to 'Add a new task', new_task_path %>
